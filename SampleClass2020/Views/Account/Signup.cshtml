@model SignupViewModel
@{
    ViewData["Title"] = "Sign Up";
}


<div class="login-cover">
    <div class="" style="margin:5% auto; max-width:300px">
        <form method="post" asp-action="Signup" asp-controller="Account">
            <center><h2><b>Sign-Up here!</b></h2></center>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" placeholder="LastName" class="form-control" />
                <small><span asp-validation-for="LastName"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" placeholder="FirstName" class="form-control" />
                <small><span asp-validation-for="FirstName"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <small><span asp-validation-for="Email"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <small><span asp-validation-for="Password"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                <small><span asp-validation-for="ConfirmPassword"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" class="form-control" />
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
        </form>
    </div>
</div>