@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="login-cover">
    <div class="" style="margin:10% auto; max-width:300px">
        <form method="post" asp-action="Login" asp-controller="Account">
            <center><h2><b>Login here!</b></h2></center>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <small><span asp-validation-for="Email"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <small><span asp-validation-for="Password"></span></small>
            </div>

            <div class="form-group">
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" /> @Html.DisplayFor(x => x.RememberMe)
            </div>
            <div class="d-flex justify-content-between align-items-center">
                <button type="submit" class="btn btn-primary">Login</button>
                <a asp-action="" asp-controller="">Forgot Password?</a>
            </div>
        </form>
    </div>
</div>